@model IEnumerable<proyecto3trimestresena.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Producto Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @proyecto3trimestresena.Controllers.Producto_compraController.NombreCompra(item.id_compra)
            </td>
            <td>
                @proyecto3trimestresena.Controllers.Producto_compraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>


@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿esta seguro de eliminar?')) {
            event.preventDefault();
        }
        })



    </script>
    }